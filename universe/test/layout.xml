<?xml version="1.0" encoding="UTF-8"?>
<world geist="nes">
	<vertical id="main">
		<horizontal split-weight="1">
			<vertical>
				<widget widget-klass="nes-screen" fit="fit" id="nes">
					<xobject>
						<xstring name="rom">__roms__/alter_ego/Alter_Ego.nes</xstring>
					</xobject>
				</widget>
				<scroll mode="vertical" id="trace-scroll" split-weight="1">
					<widget widget-klass="nes-trace" fit="expand" />
				</scroll>
			</vertical>
			<vertical split-weight="1">
				<horizontal split-weight="2" id="content">
					<scroll title="比較" mode="vertical" id="memory-compare" split-weight="1">
						<widget widget-klass="nes-compare" widget-id="nes-compare" fit="expand" />
					</scroll>
					<scroll title="メモリ" mode="vertical" id="memory-viewer" split-weight="1">
						<widget title="NES" widget-klass="nes-memory" widget-id="nes-watcher" fit="expand" />
					</scroll>
				</horizontal>
				<horizontal>
					<vertical split-weight="1">
						<label text="値を検索" />
						<textarea desc="この値と比較して" />
						<horizontal>
							<button text="同じ" split-weight="1" />
							<button text="違う" split-weight="1" />
						</horizontal>
						<horizontal>
							<button text="より大きい" split-weight="1" />
							<button text="より小さい" split-weight="1" />
						</horizontal>
						<horizontal>
							<button text="以上" split-weight="1" />
							<button text="以下" split-weight="1" />
						</horizontal>
					</vertical>
					<vertical split-weight="1">
						<label text="比較" />
						<label text="前の値と比較して" />
						<horizontal>
							<button text="同じ" split-weight="1" />
							<button text="違う" split-weight="1" />
						</horizontal>
						<horizontal>
							<button text="より大きい" split-weight="1" />
							<button text="より小さい" split-weight="1" />
						</horizontal>
						<horizontal>
							<button text="以上" split-weight="1" />
							<button text="以下" split-weight="1" />
						</horizontal>
					</vertical>
				</horizontal>
			</vertical>
		</horizontal>
		<horizontal>
			<label split-weight="1" />
			<button text="戻る" />
			<button text="進む" />
		</horizontal>
	</vertical>
	<label id="label" text="NES"></label>
	<horizontal id="mem-edit">
		<textarea desc="" />
		<button text="変更" />
	</horizontal>
	<label id="label" text="NES"></label>
</world>

